datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id           Int       @id @default(autoincrement())
    createdAt    DateTime  @default(now())
    updatedAt    DateTime  @updatedAt
    email        String    @unique
    stringHash   String
    passwordHash String
    pictures     Picture[]
}

model Picture {
    id          Int      @id @default(autoincrement())
    author      User     @relation(fields: [authorId], references: [id])
    authorId    Int
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    title       String
    description String
    imageURL    String
    downloadURL String
}
